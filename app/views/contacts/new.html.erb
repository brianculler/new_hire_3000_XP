<% provide(:title, 'Add New Hire!') %>
<h1>Add A New Hire</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@contact) do |f| %>

	  <%= render 'shared/error_message_contact' %>
		
    	<%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
	  	<%= f.text_field :email %>

	  	<%= f.label :todo, "Contact To Do" %>
      <%= f.select :todo, ["Laptop", "Badge", "Find Seat", "Setup VPN", "Setup IRC", "Setup VM"] %>
			
			<br>
      <%= f.submit "Add Admin", class: "btn btn-large btn-success" %>
    	<% end %>
			
  </div>
</div>