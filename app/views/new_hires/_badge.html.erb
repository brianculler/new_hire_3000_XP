<tr>
	<td><font size="4">Request keycard badge</font>
	<td>Ron</td>
	
	<td>
		<% if @new_hire.badge == 0 %>
			<span class="label">Not started</span>
		<% elsif @new_hire.badge == 2 || @new_hire.badge == 3 || @new_hire.badge == 4 %>
			<span class="label label-warning">In progress</span>
		<% else %>
			<span class="label label-success">Done</span>
		<% end %>
	</td>
	
	<td>
		<div class="btn-group">
			<% if @new_hire.badge == 0 %>
		    <%= link_to "action 1", "/badge/#{@new_hire.id}?badge=3", class: "btn btn-small" %>
			<% elsif @new_hire.badge == 2 %>
				<%= link_to "action 1", "/badge/#{@new_hire.id}?badge=4", class: "btn btn-small" %>
			<% elsif @new_hire.badge == 3 || @new_hire.badge == 4 %>
				<%= link_to "did action 1", "#", class: "btn disabled btn-small" %>
		  <% end %>
		
			<% if @new_hire.badge == 0 %>
		    <%= link_to "action 2", "/badge/#{@new_hire.id}?badge=2", class: "btn btn-small" %>
			<% elsif @new_hire.badge == 3 %>
				<%= link_to "action 2", "/badge/#{@new_hire.id}?badge=4", class: "btn btn-small" %>
			<% elsif @new_hire.badge == 2 || @new_hire.badge == 4 %>
					<%= link_to "did action 2", "#", class: "btn disabled btn-small" %>
		  <% end %>
		
			<% if @new_hire.badge != 1 %>
		    <%= link_to "Done!", "/badge/#{@new_hire.id}?badge=1", class: "btn btn-success btn-small" %>
		  <% else %>
				<%= link_to "No more actions", "#", class: "btn disabled btn-small" %>
			<% end %>
			
			<%= link_to "reset", "/badge/#{@new_hire.id}?badge=0", class: "btn btn-small" %>
		</div>
	</td>
	
</tr>
