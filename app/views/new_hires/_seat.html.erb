<tr>
	<td><font size="4">seat</font>
	<td>Jiayuan Chen</td>
	
	<td>
		<% if @new_hire.seat == 0 %>
			<span class="label">Not started</span>
		<% elsif @new_hire.seat == 2 || @new_hire.seat == 3 || @new_hire.seat == 4 %>
			<span class="label label-warning">In progress</span>
		<% else %>
			<span class="label label-success">Done</span>
		<% end %>
	</td>
	
	<td>
		<div class="btn-group">
			<% if @new_hire.seat == 0 %>
		    <%= link_to "action 1", "/seat/#{@new_hire.id}?seat=3", class: "btn" %>
			<% elsif @new_hire.seat == 2 %>
				<%= link_to "action 1", "/seat/#{@new_hire.id}?seat=4", class: "btn" %>
			<% elsif @new_hire.seat == 3 || @new_hire.seat == 4 %>
				<%= link_to "did action 1", "#", class: "btn disabled" %>
		  <% end %>
		
			<% if @new_hire.seat == 0 %>
		    <%= link_to "action 2", "/seat/#{@new_hire.id}?seat=2", class: "btn" %>
			<% elsif @new_hire.seat == 3 %>
				<%= link_to "action 2", "/seat/#{@new_hire.id}?seat=4", class: "btn" %>
			<% elsif @new_hire.seat == 2 || @new_hire.seat == 4 %>
					<%= link_to "did action 2", "#", class: "btn disabled" %>
		  <% end %>
		
			<% if @new_hire.seat != 1 %>
		    <%= link_to "Done!", "/seat/#{@new_hire.id}?seat=1", class: "btn btn-success" %>
		  <% else %>
				<%= link_to "No more actions", "#", class: "btn disabled" %>
			<% end %>
			
			<%= link_to "reset", "/seat/#{@new_hire.id}?seat=0", class: "btn" %>
		</div>
	</td>
	
</tr>
