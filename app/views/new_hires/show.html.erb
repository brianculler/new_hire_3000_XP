<% if Contact.find_by_todo("Laptop") != nil && Contact.find_by_todo("Badge") != nil && Contact.find_by_todo("Setup VPN") != nil && Contact.find_by_todo("Find Seat") != nil && Contact.find_by_todo("Setup IRC") != nil && Contact.find_by_todo("Setup VM") != nil %>

<% provide(:title, @new_hire.name) %>
<div class="row">
  <aside class="span12">
    <section>
		<font size="5"><b><%= @new_hire.name %></b></font>	
	<div style="float:right;" class="btn-group">
 	<%= link_to "edit", edit_new_hire_path(@new_hire), class: "btn btn-small" %>	
	<%= link_to "delete", @new_hire, method: :delete,
	                      data: { confirm: "You sure?" }, class: "btn btn-small btn-danger" %>
	</div>
	  <p>
			<br>
			<i class="icon-envelope"></i><b>	Email:</b> 	     	
			<%= @new_hire.email %>
			<br>
			<i class="icon-calendar"></i><b>	Start date:</b>      
			<%= @new_hire.start_date %>
			<br>
			<i class="icon-user"></i><b>	Manager:</b>      
			<%= @new_hire.manager %>
			<br>
			<i class="icon-map-marker"></i><b>	Location:</b> 
			<%= @new_hire.office_location %>
			<br>
			<i class="icon-wrench"></i><b>	Computer:</b> 
			<%= @new_hire.type_of_computer %>
			<br>
			<i class="icon-home"></i><b>	Department:</b>      
			<%= @new_hire.department %>
	  </p>
    </section>
  </aside>

<%= render 'to_do_list' %>

</div>

<% else %>
	<% flash[:error] = "Please first complete the necessary contacts information within \"Settings\"  (completed #{Contact.count} out 6)" %> 
<% end %>