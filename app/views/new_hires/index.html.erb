	<thead>
		<tr>
			<th> Name </th>
			<th> Oracle Email </th>
			<th> Department </th>
			<th> Actions </th>
		</tr>
	<thead>

	<tbody>
    <%= render @new_hires %>
	</tbody>
</table>
