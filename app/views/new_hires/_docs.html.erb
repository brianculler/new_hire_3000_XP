<tr>
	<td><font size="4">docs</font>
	<td>Jiayuan Chen</td>
	
	<td>
		<% if @new_hire.docs == 0 %>
			<span class="label">Not started</span>
		<% elsif @new_hire.docs == 2 || @new_hire.docs == 3 || @new_hire.docs == 4 %>
			<span class="label label-warning">In progress</span>
		<% else %>
			<span class="label label-success">Done</span>
		<% end %>
	</td>
	
	<td>
		<div class="btn-group">
			<% if @new_hire.docs == 0 %>
		    <%= link_to "action 1", "/docs/#{@new_hire.id}?docs=3", class: "btn btn-small" %>
			<% elsif @new_hire.docs == 2 %>
				<%= link_to "action 1", "/docs/#{@new_hire.id}?docs=4", class: "btn btn-small" %>
			<% elsif @new_hire.docs == 3 || @new_hire.docs == 4 %>
				<%= link_to "did action 1", "#", class: "btn disabled btn-small" %>
		  <% end %>
		
			<% if @new_hire.docs == 0 %>
		    <%= link_to "action 2", "/docs/#{@new_hire.id}?docs=2", class: "btn btn-small" %>
			<% elsif @new_hire.docs == 3 %>
				<%= link_to "action 2", "/docs/#{@new_hire.id}?docs=4", class: "btn btn-small" %>
			<% elsif @new_hire.docs == 2 || @new_hire.docs == 4 %>
					<%= link_to "did action 2", "#", class: "btn disabled btn-small" %>
		  <% end %>
		
			<% if @new_hire.docs != 1 %>
		    <%= link_to "Done!", "/docs/#{@new_hire.id}?docs=1", class: "btn btn-success btn-small" %>
		  <% else %>
				<%= link_to "No more actions", "#", class: "btn disabled btn-small" %>
			<% end %>
			
			<%= link_to "reset", "/docs/#{@new_hire.id}?docs=0", class: "btn btn-small" %>
		</div>
	</td>
	
</tr>
