<% provide(:title, "Edit user") %> 
<h1>Update new hire information</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@new_hire) do |f| %>
      <%= render 'shared/error_messages' %>

        <%= f.label :name %>
        <%= f.text_field :name %>

        <%= f.label :email %>
        <%= f.text_field :email %>

        <%= f.label :start_date %>
        <%= datepicker_input "new_hire","start_date", :placeholder => 'MM/DD/YYYY'%>

  	  <%= f.label :office_location %>
        <%= f.select :office_location, ["101 Marietta St. Suite 1700 Atlanta, GA 30303", "300 Oracle Pkwy. Redwood Shores, CA 94065", "13915 Burnet Rd., Suite 406, Austin, TX 78728", "475 Sansome St, 15th Floor, San Francisco, CA, 94111"]%>

  	  <%= f.label :type_of_computer %>
        <%= f.select :type_of_computer, ["Retina Macbook Pro", "Non-Retina Macbook Pro"]%>

  	  <%= f.label :department %>
        <%= f.select :department, ["Executive", "Outbound Product Management", "User Experience", "Program & Partner Management", "Inbound Product Management", "Engineering", "Engineering Infrastructure", "Quality Assurance", "Student / Interns"] %>

				<%= f.label :laptop %>
				<%=f.select :laptop, [0,1,2,3,4,5,6,7]%>
	  <br>
	  <br>
      <%= f.submit "Save", class: "btn btn-large btn-success" %>
      <%= link_to "Cancel", new_hire_url, class: "btn btn-large btn" %>	
    <% end %>


  </div>
</div>