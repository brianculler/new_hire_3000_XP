<aside class="span12">

<table class="table table-striped table-bordered">
	<thead>
	    <tr class="success">
	      <th class="span5">todo</th>
				<th>person in charge</th>
				<th>status</th>
	      <th class="span3">available actions</th>			
	    </tr>
	</thead>

<%= render 'laptop' %>
<%= render 'badge' %>
<%= render 'vpn' %>
<%= render 'seat' %>
<%= render 'docs' %>
<%= render 'irc' %>
<%= render 'vm' %>

	<tr>
		<td>...</td>
		<td>...</td>
		<td>...</td>
		<td>...</td>
	</tr>
	
</table>

<% @total = 0 %>

<% if @new_hire.laptop == 0 %>
	<% laptopp = 0 %>
<% elsif @new_hire.laptop == 1 %>
	<% laptopp = 3 %>
<% elsif @new_hire.laptop == 2 || @new_hire.laptop == 3 %>
	<% laptopp = 1 %>
<% else %>
	<% laptopp = 2 %>
<% end %>
	
<% if @new_hire.badge == 0 %>
	<% badgep = 0 %>
<% elsif @new_hire.badge == 1 %>
	<% badgep = 3 %>
<% elsif @new_hire.badge == 2 || @new_hire.badge == 3 %>
	<% badgep = 1 %>
<% else %>
	<% badgep = 2 %>
<% end %>

<% if @new_hire.vpn == 0 %>
	<% vpnp = 0 %>
<% elsif @new_hire.vpn == 1 %>
	<% vpnp = 3 %>
<% elsif @new_hire.vpn == 2 || @new_hire.vpn == 3 %>
	<% vpnp = 1 %>
<% else %>
	<% vpnp = 2 %>
<% end %>

<% if @new_hire.seat == 0 %>
	<% seatp = 0 %>
<% elsif @new_hire.seat == 1 %>
	<% seatp = 3 %>
<% elsif @new_hire.seat == 2 || @new_hire.seat == 3 %>
	<% seatp = 1 %>
<% else %>
	<% seatp = 2 %>
<% end %>

<% if @new_hire.docs == 0 %>
	<% docsp = 0 %>
<% elsif @new_hire.docs == 1 %>
	<% docsp = 3 %>
<% elsif @new_hire.docs == 2 || @new_hire.docs == 3 %>
	<% docsp = 1 %>
<% else %>
	<% docsp = 2 %>
<% end %>

<% if @new_hire.irc == 0 %>
	<% ircp = 0 %>
<% elsif @new_hire.irc == 1 %>
	<% ircp = 3 %>
<% elsif @new_hire.irc == 2 || @new_hire.irc == 3 %>
	<% ircp = 1 %>
<% else %>
	<% ircp = 2 %>
<% end %>

<% if @new_hire.vm == 0 %>
	<% vmp = 0 %>
<% elsif @new_hire.vm == 1 %>
	<% vmp = 3 %>
<% elsif @new_hire.vm == 2 || @new_hire.vm == 3 %>
	<% vmp = 1 %>
<% else %>
	<% vmp = 2 %>
<% end %>

<% @total = ((laptopp + badgep + vpnp + seatp + docsp + ircp + vmp)*4.76).ceil %>


<% if @total == 100 %>
	<h1>You have finished the new hire todo list!</h1>
<% else %>
	<h1><%= "todo list progress: #{@total}%" %></h1>
<% end %>

</aside>


