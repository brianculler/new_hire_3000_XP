<% if Contact.find_by_todo("Laptop") != nil && Contact.find_by_todo("Badge") != nil && Contact.find_by_todo("Setup VPN") != nil && Contact.find_by_todo("Find Seat") != nil && Contact.find_by_todo("Setup IRC") != nil && Contact.find_by_todo("Setup VM") != nil %>

	<% provide(:title, 'Add New Hire!') %>
	<h1>Add A New Hire</h1>

	<div class="row">
  		<div class="span6 offset3">
    		<%= form_for(@new_hire) do |f| %>

	  			<%= render 'shared/error_messages' %>
		
    			<%= f.label :name %>
     			<%= f.text_field :name %>

      			<%= f.label :oracle_email %>
	  			<%= f.text_field :email %>

      			<%= f.label :start_date %>
      			<%= datepicker_input "new_hire","start_date", :placeholder => 'MM/DD/YYYY'%>
			
				<%= f.label :manager %>
      			<%= f.text_field :manager %>

	  			<%= f.label :office_location %>
      			<%= f.select :office_location, ["101 Marietta St. Suite 1700 Atlanta, GA 30303", 
											"300 Oracle Pkwy. Redwood Shores, CA 94065", 
											"13915 Burnet Rd., Suite 406, Austin, TX 78728", 
											"475 Sansome St, 15th Flo1"]%>

	  			<%= f.label :type_of_computer %>
      			<%= f.select :type_of_computer, ["Non-Retina Macbook Pro", "Retina Macbook Pro"]%>

	  			<%= f.label :department %>
      			<%= f.select :department, ["Engineering", "Engineering Infrastructure", "Executive", "Inbound Product Management", "Outbound Product Management", "Program & Partner Management", "Quality Assurance", "Student / Interns", "User Experience"] %>
			
					<p>* a welcome email will be sent to the new hire</p>
      			<%= f.submit "Add Hire", class: "btn btn-large btn-success" %>
    		<% end %>
			
  		</div>
	</div>
<% else %>
	<h1>You still need one more step...</h1>
	<% flash[:error] = "Please first complete the necessary contacts information within \"Settings\"  (completed #{Contact.count} out 6)" %> 
<% end %>