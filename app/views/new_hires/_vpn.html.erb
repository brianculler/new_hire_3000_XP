<tr>
	<td><font size="4">vpn</font>
	<td>Jiayuan Chen</td>
	
	<td>
		<% if @new_hire.vpn == 0 %>
			<span class="label">Not started</span>
		<% elsif @new_hire.vpn == 2 || @new_hire.vpn == 3 || @new_hire.vpn == 4 %>
			<span class="label label-warning">In progress</span>
		<% else %>
			<span class="label label-success">Done</span>
		<% end %>
	</td>	
	
	<td>
		<div class="btn-group">
			<% if @new_hire.vpn == 0 %>
		    <%= link_to "action 1", "/vpn/#{@new_hire.id}?vpn=3", class: "btn" %>
			<% elsif @new_hire.vpn == 2 %>
				<%= link_to "action 1", "/vpn/#{@new_hire.id}?vpn=4", class: "btn" %>
			<% elsif @new_hire.vpn == 3 || @new_hire.vpn == 4 %>
				<%= link_to "did action 1", "#", class: "btn disabled" %>
		  <% end %>
		
			<% if @new_hire.vpn == 0 %>
		    <%= link_to "action 2", "/vpn/#{@new_hire.id}?vpn=2", class: "btn" %>
			<% elsif @new_hire.vpn == 3 %>
				<%= link_to "action 2", "/vpn/#{@new_hire.id}?vpn=4", class: "btn" %>
			<% elsif @new_hire.vpn == 2 || @new_hire.vpn == 4 %>
					<%= link_to "did action 2", "#", class: "btn disabled" %>
		  <% end %>
		
			<% if @new_hire.vpn != 1 %>
		    <%= link_to "Done!", "/vpn/#{@new_hire.id}?vpn=1", class: "btn" %>
		  <% else %>
				<%= link_to "No more actions", "#", class: "btn disabled" %>
			<% end %>
			
			<%= link_to "reset", "/vpn/#{@new_hire.id}?vpn=0", class: "btn" %>
		</div>
	</td>
	
</tr>
